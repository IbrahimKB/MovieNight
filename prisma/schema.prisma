//////////////////////////////////////////////////////////////
// GENERATOR + DATASOURCE
//////////////////////////////////////////////////////////////

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////////////////

enum Role {
  user
  admin
}

enum SuggestionStatus {
  pending
  accepted
  rejected
}

enum FriendshipStatus {
  pending
  accepted
  rejected
}

enum InvitationStatus {
  pending
  accepted
  declined
}

enum VoteType {
  yes
  maybe
  no
}

//////////////////////////////////////////////////////////////
// AUTH + USERS
//////////////////////////////////////////////////////////////

model AuthUser {
  id           String   @id @default(uuid()) @db.Uuid
  puid         String?  @unique
  username     String   @unique
  email        String   @unique
  name         String?
  avatar       String?
  passwordHash String   @map("password_hash")
  role         Role     @default(user)
  joinedAt     DateTime @default(now()) @map("joined_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  sessions                Session[]
  watchHistory            WatchedMovie[]
  watchDesires            WatchDesire[]
  suggestionsFrom         Suggestion[] @relation("SuggestionsFromUser")
  suggestionsTo           Suggestion[] @relation("SuggestionsToUser")
  friendshipsAsUser1      Friendship[] @relation("FriendshipUser1")
  friendshipsAsUser2      Friendship[] @relation("FriendshipUser2")
  friendshipsRequested    Friendship[] @relation("FriendshipRequester")
  eventsHosted            Event[]
  eventInvitations        EventInvitation[] @relation("EventInvitee")
  eventInvitationsSent    EventInvitation[] @relation("EventInviter")
  notifications           Notification[]
  pushSubscriptions       UserPushSubscription[]
  notificationPreferences UserNotificationPreferences?
  votes                   MovieNightVote[] @relation("UserVotes")

  @@map("users")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @db.Uuid @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

//////////////////////////////////////////////////////////////
// MOVIES & RELEASES
//////////////////////////////////////////////////////////////

model Movie {
  id          String    @id @default(uuid()) @db.Uuid
  tmdbId      Int?      @unique @map("tmdb_id")
  imdbId      String?   @unique @map("imdb_id")
  title       String
  year        Int
  genres      String[]  @db.Text
  platform    String?
  poster      String?
  description String
  imdbRating  Float?    @map("imdb_rating")
  rtRating    Float?    @map("rt_rating")
  releaseDate DateTime? @map("release_date")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  releases     Release[]
  watchHistory WatchedMovie[]
  watchDesires WatchDesire[]
  suggestions  Suggestion[]
  events       Event[]
  votes        MovieNightVote[] @relation("MovieVotes")

  @@map("movies")
}

model Release {
  id          String   @id @default(uuid()) @db.Uuid
  tmdbId      Int?     @unique @map("tmdb_id")
  movieId     String   @db.Uuid @map("movie_id")
  title       String
  platform    String
  releaseDate DateTime @map("release_date")
  genres      String[] @db.Text
  description String?
  poster      String?
  year        Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@index([movieId])
  @@index([releaseDate])
  @@map("releases")
}

//////////////////////////////////////////////////////////////
// WATCH HISTORY & WATCH DESIRE
//////////////////////////////////////////////////////////////

model WatchedMovie {
  id            String   @id @default(uuid()) @db.Uuid
  userId        String   @db.Uuid @map("user_id")
  movieId       String   @db.Uuid @map("movie_id")
  watchedAt     DateTime @default(now()) @map("watched_at")
  originalScore Int?     @map("original_score")
  reaction      Json?    @map("reaction")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user  AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([movieId])
  @@index([userId, watchedAt]) // Optimization: Compound index for "watched recently" queries
  @@unique([userId, movieId])
  @@map("watch_history")
}

model WatchDesire {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @db.Uuid @map("user_id")
  movieId      String   @db.Uuid @map("movie_id")
  suggestionId String?  @db.Uuid @map("suggestion_id")
  rating       Float?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user       AuthUser    @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie      Movie       @relation(fields: [movieId], references: [id], onDelete: Cascade)
  suggestion Suggestion? @relation(fields: [suggestionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([movieId])
  @@index([suggestionId])
  @@unique([userId, movieId])
  @@map("watch_desire")
}

//////////////////////////////////////////////////////////////
// SUGGESTIONS
//////////////////////////////////////////////////////////////

model Suggestion {
  id         String           @id @default(uuid()) @db.Uuid
  movieId    String           @db.Uuid @map("movie_id")
  fromUserId String           @db.Uuid @map("from_user_id")
  toUserId   String?          @db.Uuid @map("to_user_id")
  message    String?
  status     SuggestionStatus @default(pending)
  createdAt  DateTime         @default(now()) @map("created_at")
  updatedAt  DateTime         @updatedAt @map("updated_at")

  movie    Movie     @relation(fields: [movieId], references: [id], onDelete: Cascade)
  fromUser AuthUser  @relation("SuggestionsFromUser", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   AuthUser? @relation("SuggestionsToUser", fields: [toUserId], references: [id], onDelete: Cascade)

  watchDesires WatchDesire[]

  @@index([fromUserId])
  @@index([toUserId])
  @@index([movieId])
  @@index([status])
  @@index([fromUserId, toUserId])
  @@index([toUserId, status]) // Optimization: Index for filtering pending suggestions
  @@map("suggestions")
}

//////////////////////////////////////////////////////////////
// FRIENDSHIPS
//////////////////////////////////////////////////////////////

model Friendship {
  id          String           @id @default(uuid()) @db.Uuid
  userId1     String           @db.Uuid @map("user_id_1")
  userId2     String           @db.Uuid @map("user_id_2")
  requestedBy String           @db.Uuid @map("requested_by")
  status      FriendshipStatus @default(pending)
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  user1     AuthUser @relation("FriendshipUser1", fields: [userId1], references: [id], onDelete: Cascade)
  user2     AuthUser @relation("FriendshipUser2", fields: [userId2], references: [id], onDelete: Cascade)
  requester AuthUser @relation("FriendshipRequester", fields: [requestedBy], references: [id], onDelete: Cascade)

  @@index([userId1])
  @@index([userId2])
  @@index([requestedBy])
  @@index([status])
  @@index([userId1, userId2])
  @@unique([userId1, userId2])
  @@map("friendships")
}

//////////////////////////////////////////////////////////////
// EVENTS
//////////////////////////////////////////////////////////////

model Event {
  id           String   @id @default(uuid()) @db.Uuid
  movieId      String   @db.Uuid @map("movie_id")
  hostUserId   String   @db.Uuid @map("host_user_id")
  participants String[] @db.Text
  date         DateTime
  notes        String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  movie        Movie                @relation(fields: [movieId], references: [id], onDelete: Cascade)
  hostUser     AuthUser             @relation(fields: [hostUserId], references: [id], onDelete: Cascade)
  invitations  EventInvitation[]

  @@index([hostUserId])
  @@index([movieId])
  @@index([date])
  @@map("events")
}

//////////////////////////////////////////////////////////////
// EVENT INVITATIONS
//////////////////////////////////////////////////////////////

model EventInvitation {
  id        String           @id @default(uuid()) @db.Uuid
  eventId   String           @db.Uuid @map("event_id")
  userId    String           @db.Uuid @map("user_id")
  invitedBy String           @db.Uuid @map("invited_by")
  status    InvitationStatus @default(pending)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  event Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  AuthUser @relation("EventInvitee", fields: [userId], references: [id], onDelete: Cascade)
  host  AuthUser @relation("EventInviter", fields: [invitedBy], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([userId])
  @@index([status])
  @@index([eventId])
  @@map("event_invitations")
}

//////////////////////////////////////////////////////////////
// MOVIE NIGHT VOTING
//////////////////////////////////////////////////////////////

model MovieNightVote {
  id        String   @id @default(uuid()) @db.Uuid
  movieId   String   @db.Uuid @map("movie_id")
  userId    String   @db.Uuid @map("user_id")
  voteType  VoteType
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  movie Movie    @relation("MovieVotes", fields: [movieId], references: [id], onDelete: Cascade)
  user  AuthUser @relation("UserVotes", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([movieId, userId])
  @@index([movieId])
  @@index([userId])
  @@index([voteType])
  @@map("movie_night_votes")
}

//////////////////////////////////////////////////////////////
// NOTIFICATIONS & PREFERENCES
//////////////////////////////////////////////////////////////

model Notification {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([userId, read])
  @@map("notifications")
}

model UserPushSubscription {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  endpoint  String   @unique
  auth      String
  p256dh    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_push_subscriptions")
}

model UserNotificationPreferences {
  id                 String   @id @default(uuid()) @db.Uuid
  userId             String   @unique @db.Uuid @map("user_id")
  emailNotifications Boolean  @default(true) @map("email_notifications")
  pushNotifications  Boolean  @default(true) @map("push_notifications")
  friendRequests     Boolean  @default(true) @map("friend_requests")
  suggestions        Boolean  @default(true) @map("suggestions")
  movieReleases      Boolean  @default(true) @map("movie_releases")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_notification_preferences")
}
